# Example environment variables for the Chaos Contained project
# Copy this file to .env in the repository root for Docker Compose.

# Core Compose variables
POSTGRES_PASSWORD=changeme
DJANGO_SECRET_KEY=your-secret-key
OPENAI_API_KEY=your-openai-api-key
# Base URL used by Flutter web build and mobile via --dart-define
API_BASE_URL=http://localhost:8000/api/v1

# Optional overrides
DJANGO_DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Service URLs (compose sets these for containers; keep here for local overrides/testing)
DATABASE_URL=postgres://chaosuser:${POSTGRES_PASSWORD}@postgres:5432/chaos
DJANGO_API_URL=http://localhost:8000

# Redis & Celery (unused in compose by default, but kept for future use)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1

# Firebase
FIREBASE_SERVER_KEY=your-firebase-server-key
FIREBASE_ADMIN_CREDENTIALS=path/to/firebase-admin.json

# Memory Encryption
MEMORY_AES_KEY=your-32-byte-aes-key

# OAuth Providers
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret
YOUTUBE_CLIENT_ID=your-youtube-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret
APPLE_CLIENT_ID=your-apple-client-id
APPLE_CLIENT_SECRET=your-apple-client-secret